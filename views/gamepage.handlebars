  <body>
    <header>
      <ul class="nav nav-pills">
        <li class="flex-column profile">
          <p>{{userName}}</p>
          <img id="profile-pic" src="/images/placeholder.jpg" alt="">
        </li>
    </header>
    {{#if logged_in}}
    <div class="container-fluid d-flex justify-content-between align-items-center game-home">
        <div class="card gaming" id="gamecard">
            <div id="game-title">
                <h1>{{game.name}}</h1>
                <p>{{game.rating}}</p>
                <p>{{game.released}}</p>
                <p id="details">{{gameDetails.description_raw}}</p>
            </div>
            <img id="gamepage" src="{{game.background_image}}" class="card-img-top single-game-image" alt="...">
        </div>
        <div class="d-flex text-center saveButton">
              <button type="button text-center" class="btn" id="saveBtn">Save to Favorites</button>
            </div>
    </div>
{{/if}}
